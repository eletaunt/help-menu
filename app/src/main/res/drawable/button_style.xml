            <solid android:color="@color/resultButtonPressed" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/resultButton" />
